<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Meakanu" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_secondary_200</item>
        <item name="colorSecondaryVariant">@color/green_secondary_700</item>
        <item name="colorOnSecondary">@color/not_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins</item>
        <item name="android:includeFontPadding">false</item>
        <item name="actionOverflowMenuStyle">@style/OptionsMenuCustomStyle</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">?attr/isLightTheme</item>
    </style>
</resources>